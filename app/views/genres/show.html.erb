<!-- The main page of playlister -->
<!DOCTYPE html>
<html>
  <head>
    <title>Playlister 2</title>
  </head>
  <body>
    <h1><%= genre.name %></h1>
    <h2>Songs</h2>
    <ul>
      <% genre.songs.each do |song| %>
        <li><ahref="songs/<%= song.to_slug %>.html"><%= song.artist.name %> - <%= song.name %> - <%= song.genre.name %></a></li>
      <% end %>
    </ul>
    <h2>Artists</h2>
      <ul>
      <% genre.artists.each do |artist| %>
        <li><ahref="artists/<%= artist.to_slug %>.html"><%= artist.name %></a></li>
      <% end %>
      </ul>
  </body>
</html>